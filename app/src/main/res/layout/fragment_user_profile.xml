<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        tools:ignore="MissingConstraints">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/linearLayout2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_profile"
                        app:civ_border_color="@color/colorAccent"
                        app:civ_border_width="2dp"
                        android:id="@+id/imgProfleUser"
                        app:civ_circle_background_color="#B1B1B1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hoang Duc Long"
                        android:id="@+id/txtProfileUsername"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                    android:layout_marginTop="8dp">

                </LinearLayout>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="@dimen/margin_layout_size"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_layout_size"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_margin="@dimen/margin_cv_size">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_favorite"
                        android:layout_weight="3"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Hoang Duc Long"
                        android:textSize="@dimen/edt_txt_size"
                        android:layout_weight="7"
                        android:id="@+id/txtProfileFullname"
                        android:layout_gravity="center"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_margin="@dimen/margin_cv_size">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_find"
                        android:layout_weight="3"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="0971536698"
                        android:textSize="@dimen/edt_txt_size"
                        android:layout_weight="7"
                        android:id="@+id/txtProfilePhone"
                        android:layout_gravity="center"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_margin="@dimen/margin_cv_size">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_logo"
                        android:layout_weight="3"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="3 times"
                        android:textSize="@dimen/edt_txt_size"
                        android:layout_weight="7"
                        android:id="@+id/txtProfileTradeTime"
                        android:layout_gravity="center"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_margin="@dimen/margin_cv_size">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_logout"
                        android:layout_weight="3"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Yen Hoa Street - Ha Noi"
                        android:textSize="@dimen/edt_txt_size"
                        android:layout_weight="7"
                        android:id="@+id/txtProfileLocation"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>